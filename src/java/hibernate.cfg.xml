<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/searchChd_database</property>
    <property name="hibernate.connection.username">searchChd</property>
    <property name="hibernate.connection.password">admin</property>
    <mapping resource="Category.hbm.xml"/>
    <mapping class="bean.Record" resource="Record.hbm.xml"/>
    <mapping class="bean.Address" resource="Address.hbm.xml"/>
    <mapping resource="Email.hbm.xml"/>
    <mapping resource="User.hbm.xml"/>
    <mapping resource="Classified.hbm.xml"/>
    <mapping resource="Review.hbm.xml"/>
    <mapping resource="Feedback.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
